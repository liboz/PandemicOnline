.card
    height 75px
    border solid 1px #808080
    border-radius 5px
    font-size 10pt
    text-align center
    width 50px 
    display: flex;
    flex-direction: column;
.unselected
    margin-top: 30px
.selected
    margin-top: 0px
.card-text
    background-color white
    font-color black
    font-weight bold
    margin-top 5px
    margin-left 5px
    margin-right 5px
    text-align left
#hand
    display flex
    width 20%
    max-width 100em;
.card-rapper 
  overflow hidden

.card-wrapper:last-child, .card-wrapper:hover
    overflow visible

